@model form_1a.Models.form_2B
@{
    ViewBag.Title = "form_2b";
}
<div>
    @{if (Model != null)
        {

            <div class="container">
                <div class="row">
                    <form id="myForm">

                        <div class="row">
                            <a href="@Url.Action("SearchItemForm2B", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">
