                                <div class="col-md-12 add-border">
                                    <p class="h4"><strong>Form Details</strong></p><br />
                                    <div class="col-md-12 form-group">
                                        <label>Date</label>
                                        @Html.TextBoxFor(model => model.entry, new { @class = "form-control datepicker", @id = "entry" })
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <label>Name</label>
                                        @Html.TextBoxFor(model => model.name, new { @class = "form-control", @placeholder = "Name" })
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <label>Date of Death</label>
                                        @{
                                            DateTime dd = Convert.ToDateTime(Model.date_of_death);
                                            <input type="text" value="@dd.ToString("MM-dd-yyyy")" class="datepicker form-control" placeholder="Date of Death" id="date_of_death" name="date_of_death"/>
                                        }
